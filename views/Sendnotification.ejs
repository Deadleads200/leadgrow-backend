<%- include('includes/header',  {username: admin[0].name,email: admin[0].email } ) %>
 <link rel="stylesheet" href="/css/notification.css">
      <div class="body-wrapper">
        <div class="container-fluid">
          <div class="card bg-info-subtle shadow-none position-relative overflow-hidden mb-4">
            <div class="card-body px-4 py-3">
         <div class="row align-items-center">
  <div class="col-md-8 col-sm-7">
    <h4 class="fw-semibold mb-1">Send Notification To Verified Users
</h4>
 
  </div>

  <div class="col-md-4 col-sm-5 text-md-end text-sm-start mt-3 mt-md-0">

  </div>
</div>

            </div>
          </div>

        
         <div class="notification-container">
<form>

<!-- Being Sent To -->
    <div class="mb-3">
        <label class="form-label">
            Sent To <span class="text-danger">*</span>
        </label>
        <select class="form-select" id="sentToEmail" required>
            <option selected value="all">All User</option>
            <option value="specific">Selected Users</option>
        </select>
    </div>

    <!-- Specific Users Multi Select -->
    <div class="mb-3 d-none" id="specificUsersWrapper">
        <label class="form-label">
            Select Users <span class="text-danger">*</span>
        </label>

        <select id="specificUsers" class="form-select" multiple style="width:100%">
            <!-- JS will load options -->
        </select>
    </div>

    <!-- Subject -->
    <div class="mb-3">
        <label class="form-label">
            Subject <span class="text-danger">*</span>
        </label>
        <input type="text" class="form-control" id="subjectEmail" required>
    </div>

    <!-- Message -->
    <div class="mb-3">
        <label class="form-label">
            Message <span class="text-danger">*</span>
        </label>

        <div id="quillToolbar"></div>
        <div id="quillEditor" style="height:180px;"></div>

        <textarea id="messageEmail"  class="d-none"></textarea>
    </div>




 <!-- Submit -->
    <div class="d-grid mt-4 mb-4">
        <button type="submit" class="btn btn-submit-custom bg-primary">Submit</button>
    </div>

</form>




</div>

           
          </div>
        </div>
      </div>

  <%- include('includes/allscripts') %>
    <!-- Quill Editor JS -->
