<%- include('includes/header', {username: admin[0].name,email: admin[0].email } ) %>

  <div class="body-wrapper">
    <div class="container-fluid">
      <div class="card bg-info-subtle shadow-none position-relative overflow-hidden mb-4">
        <div class="card-body px-4 py-3">
          <div class="row align-items-center">
            <div class="col-md-8 col-sm-7">
              <h4 class="fw-semibold mb-1">Setting</h4>

            </div>


          </div>

        </div>
      </div>




      <div class="col-md-12">

        <div class="card  border-0">


          <div class="card-body p-4">
            <form id="contactForm" enctype="multipart/form-data">
              <input type="hidden" id="contactId" name="id" />

              <div class="form-group mb-5">
                <label class="fw-semibold">Company logo<span class="text-danger">*</span></label>
                <input type="file" id="logo" class="form-control" name="logo" accept="image/*" />
                <div class="mt-3">
                  <img id="logoPreview" src="#" alt="Logo Preview" class="logoPreviewsetting" />
                </div>
                <small class="text-muted d-block mt-3 mb-3">
                  <i class="fa-solid fa-circle-info text-primary"></i>
                  Recommended Size: <strong>217 x 41 px</strong>, Formats: <strong>/jpeg|jpg|png|webp/</strong>
                </small>
                <!-- BASIC CONTACT INPUTS -->
                <!-- Favicon -->
                <div class="form-group mb-3">
                  <label class="fw-semibold">Favicon<span class="text-danger">*</span></label>
                  <input type="file" id="favicon" class="form-control" name="favicon" accept="image/*" />
                  <div class="mt-2">
                    <img id="faviconPreview" src="#" alt="Favicon Preview" class="faviconPreviewsetting" />
                  </div>
                  <small class="text-muted d-block mt-3">
                    Recommended Size: <strong>35 x 35 px</strong>, Formats: <strong>jpeg|jpg|png|ico|webp</strong>
                  </small>
                </div>

                <div class="form-group mb-3">
                  <label class="fw-semibold">Company Name<span class="text-danger">*</span></label>
                  <input type="text" id="companyName" name="companyName" class="form-control" required>
                </div>

                <div class="form-group mb-3">
                  <label class="fw-semibold">Contact Address<span class="text-danger">*</span></label>
                  <input type="text" id="contactAddress" name="contactAddress" class="form-control" required>
                </div>

                <div class="form-group mb-3">
                  <label class="fw-semibold">Contact Number<span class="text-danger">*</span></label>
                  <input type="text" id="contactNumber" name="contactNumber" class="form-control" required>
                </div>

                <div class="form-group mb-3">
                  <label class="fw-semibold">Email Address<span class="text-danger">*</span></label>
                  <input type="email" id="emailAddress" name="emailAddress" class="form-control" required>
                </div>
                <!-- Currency -->
                <div class="form-group mb-3">
                  <label class="fw-semibold">Currency<span class="text-danger">*</span></label>
                  <input type="text" id="currency" name="currency" class="form-control" placeholder="USD" required>
                </div>
                <div class="form-group mb-3">
                  <label class="fw-semibold">Currency Symbol</label>
                  <input type="text" id="currencySymbol" name="currencySymbol" class="form-control" placeholder="$"
                    >
                </div>

                <!-- SOCIAL LINKS HEADING -->
                <h6 class="fw-bold mb-3 text-primary">Social Media Links</h6>

                <!-- SOCIAL ROW 1 -->
                <div class="row">
                  <div class="col-md-6">
                    <div class="form-group mb-3">
                      <label class="fw-semibold">Facebook</label>
                      <input type="text" id="facebook" name="facebook" class="form-control"
                        placeholder="https://facebook.com/...">
                    </div>
                  </div>

                  <div class="col-md-6">
                    <div class="form-group mb-3">
                      <label class="fw-semibold">Instagram</label>
                      <input type="text" id="instagram" name="instagram" class="form-control"
                        placeholder="https://instagram.com/...">
                    </div>
                  </div>
                </div>

                <!-- SOCIAL ROW 2 -->
                <div class="row">
                  <div class="col-md-6">
                    <div class="form-group mb-3">
                      <label class="fw-semibold">X (Twitter)</label>
                      <input type="text" id="twitter" name="twitter" class="form-control"
                        placeholder="https://x.com/...">
                    </div>
                  </div>

                  <div class="col-md-6">
                    <div class="form-group mb-4">
                      <label class="fw-semibold">LinkedIn</label>
                      <input type="text" id="linkedin" name="linkedin" class="form-control"
                        placeholder="https://linkedin.com/...">
                    </div>
                  </div>
                </div>
 <h6 class="fw-bold mb-3 text-primary">Email Setting</h6>
                  <!-- SOCIAL ROW 2 -->
                <div class="row">
                  <div class="col-md-6">
                    <div class="form-group mb-3">
                      <label class="fw-semibold">Email</label>
                      <input type="text" id="email" name="email" class="form-control"
                        placeholder="Enter Email">
                    </div>
                  </div>

                  <div class="col-md-6">
                    <div class="form-group mb-4">
                      <label class="fw-semibold">password</label>
                      <input type="text" id="password" name="password" class="form-control"
                        placeholder="Enter password">
                    </div>
                  </div>
                </div>
   
                <button class="btn btn-primary w-100 py-2" type="submit">
                  Save Contact Details
                </button>

            </form>
          </div>

        </div>

      </div>








    </div>
  </div>
  </div>


  <%- include('includes/allscripts') %>
    <script src="https://cdn.quilljs.com/1.3.6/quill.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script src="/js/view.js/contact.js"></script>