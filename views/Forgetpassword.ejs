                <form action="/forget-password" method="post" id="forgetPasswordForm">
                  <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Email address<span class="text-danger">*</span></label>
                    <input type="email" class="form-control" name="email" id="exampleInputEmail1" aria-describedby="emailHelp"   placeholder="Enter Your Email" required>
                  </div>
                    <button type="submit" class="btn btn-primary w-100 py-8 mb-4 rounded-2">Forgot Password</button>
