<!-- Countries Modal -->
<div class="modal fade" id="countriesModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-md modal-dialog-top">
    <div class="modal-content border-0 shadow-lg rounded-3">
      <div class="modal-header bg-light-subtle text-white">
        <h5 class="modal-title fw-semibold" id="countriesModalLabel">Add Country</h5>
        <button type="button" class="btn-close btn-close-dark" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body p-4">
        <form id="countriesForm">
          <input type="hidden" id="countryId">
          <div class="mb-3">
            <label class="form-label fw-medium">Country Name <span class="text-danger">*</span></label>
            <input type="text" id="countryTitle" class="form-control" placeholder="Enter country name" required>
          </div>
          <div class="form-check form-switch d-flex align-items-center mt-3">
  <input class="form-check-input" type="checkbox" id="countryStatus" checked>
  <label class="form-check-label ms-2 fw-medium" for="countryStatus">Enable Country</label>
</div>

          <div class="modal-footer border-0 pt-0">
            <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary px-4">Save</button>
          </div>
        </form>
      </div>
