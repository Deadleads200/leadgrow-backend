<%- include('includes/header', { username: admin[0].name, email: admin[0].email }) %>

<div class="body-wrapper">
  <div class="container-fluid">

    <div class="card bg-info-subtle shadow-none mb-4">
      <div class="card-body">
        <h4 class="fw-semibold mb-0">Manage Login Section</h4>
      </div>
    </div>

    <div class="card shadow-sm">
      <div class="card-body">

        <form id="loginSectionForm" enctype="multipart/form-data">

          <div class="mb-3">
            <label class="form-label fw-semibold">
              Title <span class="text-danger">*</span>
            </label>
            <input type="text"
                   id="loginSectionTitle"
                   class="form-control"
                   value="<%= loginsection?.title || '' %>"
                   required>
            <small class="text-muted">
              To highlight any word use <code>&lt;span&gt;word&lt;/span&gt;</code>
            </small>
          </div>

          <div class="d-flex justify-content-between align-items-center mb-2">
            <label class="form-label fw-semibold">
              Description <span class="text-danger">*</span>
            </label>
            <button type="button"
                    id="generateLoginSectionAI"
                    class="btn btn-sm btn-outline-primary">
              <i class="fa-solid fa-wand-magic-sparkles me-1"></i>
              Generate by AI
            </button>
          </div>

          <div class="mb-3">
            <textarea id="loginSectionDescription"
                      class="form-control"
                      rows="4"
                      required><%= loginsection?.description || '' %></textarea>
          </div>

          <div class="mb-3">
            <label class="form-label fw-semibold">
              Image <span class="text-danger">*</span>
            </label>
            <input type="file"
                   id="loginSectionImage"
                   name="image"
                   class="form-control"
                   accept="image/*">

            <% if (loginsection?.image) { %>
              <img src="<%= loginsection.image %>"
                   id="previewLoginImage"
                   class="img-thumbnail mt-2"
                   style="max-width:200px;">
            <% } else { %>
              <img id="previewLoginImage"
                   class="img-thumbnail mt-2"
                   style="max-width:200px; display:none;">
            <% } %>
          </div>
              <small class="text-muted d-block mt-1">
                    <i class="fa-solid fa-circle-info text-primary"></i>
                    Recommended Size: <strong>800 x 700 px</strong>, Formats: <strong>/jpeg|jpg|png|webp/</strong>
                  </small>
               <div class="text-start mt-3">
           <button type="submit" class="btn btn-primary px-4">
            Save Changes
          </button>
          </div>
          

        </form>

      </div>
    </div>

  </div>
</div>

<%- include('includes/allscripts') %>
<script src="/js/view.js/loginsection.js"></script>
